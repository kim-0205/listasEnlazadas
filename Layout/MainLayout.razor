@inherits LayoutComponentBase

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="sidebar @SidebarClass">
            <button class="toggle-btn" @onclick="ToggleSidebar">☰</button>
            <h3 class="text-center">Listas Enlazadas</h3>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/">
                        <i class="bi bi-house-door"></i> Home
                    </NavLink>
                </li>
                
            </ul>
        </div>

        <!-- Contenido Principal -->
        <div class="content @ContentClass">
            <main>
                @Body

            </main>
        </div>
    </div>
</div>

<style>
    /* Asegurar que el contenido no cause desplazamiento horizontal */
    html, body {
        overflow-x: hidden; /* Oculta la barra de desplazamiento horizontal */
        max-width: 100%;
    }

    /* Ajustar el contenedor principal para que no se desborde */
    .container-fluid {
        width: 100%;
        max-width: 100%;
        overflow: hidden;
    }

    /* Ajustar el contenido al colapsar el sidebar */
    .content {
        margin-left: 250px;
        transition: margin-left 0.3s ease-in-out;
        padding: 20px;
        max-width: calc(100% - 250px); /* Evita que el contenido sobrepase la pantalla */
    }

        .content.collapsed {
            margin-left: 60px;
            max-width: calc(100% - 60px);
        }

    /* Estilo del Sidebar */
    .sidebar {
        width: 250px;
        height: 100vh;
        background-color: #A976CD; /* Morado suave */
        color: white;
        padding: 20px;
        transition: width 0.3s ease-in-out;
        position: fixed;
        left: 0;
        top: 0;
        overflow-x: hidden;
    }

        .sidebar.collapsed {
            width: 60px;
        }

        .sidebar h3 {
            text-align: center;
            font-weight: bold;
            margin-bottom: 20px;
            font-size: 24px;
            transition: opacity 0.3s ease-in-out;
        }

    .collapsed h3 {
        display: none;
    }

    .sidebar ul {
        list-style: none;
        padding: 0;
    }

        .sidebar ul li {
            padding: 10px;
            transition: all 0.3s ease-in-out;
        }

            .sidebar ul li:hover {
                background-color: #7b1fa2;
                border-radius: 8px;
                transform: scale(1.05);
            }

    .nav-link {
        color: white;
        text-decoration: none;
        display: flex;
        align-items: center;
        font-size: 18px;
        padding: 10px;
        transition: all 0.3s;
    }

        .nav-link i {
            font-size: 24px;
            margin-right: 10px;
            transition: all 0.3s;
        }

        .nav-link:hover {
            color: #ffdd57;
            transform: translateX(5px);
        }

    /* Botón de Colapsar */
    .toggle-btn {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: transparent;
        border: none;
        color: white;
        font-size: 24px;
        cursor: pointer;
        transition: all 0.3s;
    }

        .toggle-btn:hover {
            color: #ffdd57;
            transform: scale(1.2);
        }
</style>

@code {
    private bool isCollapsed = false;

    private string SidebarClass => isCollapsed ? "sidebar collapsed" : "sidebar";
    private string ContentClass => isCollapsed ? "content collapsed" : "content";

    private void ToggleSidebar()
    {
        isCollapsed = !isCollapsed;
    }
}
